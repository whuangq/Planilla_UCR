@using Application.Employees
@using Domain.Employees.Entities
@using Presentation.Core.Components
@inject NavigationManager nav
@inject IEmployeeService EmployeeServic

@page "/View_Project_Employees_Error/{projectName}"
@*Navigation footprint *@
@{
    List<BreadcrumbItem> _items = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Proyectos", href: "#"),
        new BreadcrumbItem("Empleados", href: "#"),
    };
}
    <MudBreadcrumbs Items="_items" Separator=">"></MudBreadcrumbs>
    <br />
    <MudText Align="Align.Center" Typo="Typo.h4">No hay empleados contratados en @projectName </MudText>
    <br />
 
   <MudToolBar DisableGutters="true" Class="gap-4">
        <MudButton></MudButton>
        <MudSpacer></MudSpacer>
        <MudButton Variant="Variant.Filled" OnClick="GoToHireEmployee" Color="Color.Secondary">
            <MudText> 
            Contratar empleados
            </MudText> 
        </MudButton>
        <MudSpacer></MudSpacer>
        <MudButton></MudButton>
    </MudToolBar>

@code {
    [Parameter]
    public string projectName { get; set; }
    private void GoToHireEmployee()
    {
        nav.NavigateTo("/Hire_Employees");
    }
}
