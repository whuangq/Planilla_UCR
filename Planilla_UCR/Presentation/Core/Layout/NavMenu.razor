@using Application.ContextMenu
@inject IContextMenuService ContextMenuService
@inject NavigationManager nav


@if (!ContextMenuService.GetShowProjectsMenu())
{ 
    <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
        <ul class="nav flex-column">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href=@("/") Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Inicio
                </NavLink>
            </li>

                <li class="nav-item px-3">
                <NavLink class="nav-link" href=@($"Projects/{email}") Match="NavLinkMatch.All">
                    <span  aria-hidden="true"></span> Proyectos
                </NavLink>
            </li>
        </ul>
    </div>
}
else
{
    string projectname = ContextMenuService.GetProjectsContext();
    <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
        <ul class="nav flex-column">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href=@("/") Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Inicio
                </NavLink>
            </li>

                <li class="nav-item px-3">
                <NavLink class="nav-link" href=@($"Projects/{email}") Match="NavLinkMatch.All">
                    <span  aria-hidden="true"></span> Proyectos
                </NavLink>
            </li>
            
            <li class="nav-item px-3">
                <NavLink class="nav-link" @onclick="()=>_isExpanded = !_isExpanded" Match="NavLinkMatch.All">
                    <span  aria-hidden="true"></span> @projectname
                </NavLink>
            </li>
            @if (_isExpanded)
            {
                <li class="nav-item px-3">
                <NavLink class="nav-link" href=@($"Projects/Details/{email}/{projectname}") Match="NavLinkMatch.All">
                    <span  aria-hidden="true"></span> Detalles
                </NavLink>
                </li>

                <li class="nav-item px-3">
                <NavLink class="nav-link" href=@($"/Projects/{email}/{projectname}/Deductions/Configurations") Match="NavLinkMatch.All">
                    <span  aria-hidden="true"></span> Deducciones
                </NavLink>
                </li>
            }
        </ul>
    </div>
}

@code {
    private bool collapseNavMenu = true;
    bool _isExpanded = true;

    [Parameter]
    public string email { get; set; }

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    protected override async Task OnInitializedAsync()
    {
        ContextMenuService.SetOnChange(StateHasChanged);
    }
}
